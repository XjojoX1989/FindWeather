<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wTvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/wTvMaxMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/divideLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/white_line" />

        <TextView
            android:id="@+id/wTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divideLine" />

        <TextClock
            android:id="@+id/wTcClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wTvDate"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/wTvHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wTcClock" />

        <TextView
            android:id="@+id/wTvPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wTvHumidity" />

        <TextView
            android:id="@+id/wTvWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wTvPressure" />

        <ImageView
            android:id="@+id/wIvWeatherIcon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/wTvCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/wTvHumidity"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="8dp"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wTvBodyTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/wIvWeatherIcon" />

        <TextView
            android:id="@+id/wTvWeatherDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/wTvBodyTemp" />


    </RelativeLayout>

</LinearLayout>